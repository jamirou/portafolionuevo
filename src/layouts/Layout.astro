---
import "../styles/global.css";
import favicon from '../assets/favicon.png';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Desarrollador Web & Marketer Digital. Soluciones estratégicas y código de alto impacto." } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href={favicon.src} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- Google Fonts: Outfit (Headings), Inter (Body) & Courier Prime (Notes) -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Courier+Prime:ital,wght@0,400;0,700;1,400&family=Inter:wght@300;400;500;600&family=Outfit:wght@400;500;700;800&display=swap" rel="stylesheet">
  </head>
  <body class="bg-[#FBF9F3] text-zinc-900 antialiased selection:bg-amber-300 selection:text-zinc-900">
    <div class="fixed inset-0 -z-10 h-full w-full bg-[#FBF9F3]">
        <!-- Subtle grain/paper texture could go here later -->
    </div>
    <main class="w-full mx-auto max-w-6xl px-4 sm:px-6 lg:px-8 relative">
      <slot />
    </main>
    <footer class="py-10 text-center text-zinc-500 text-sm font-mono flex flex-col items-center gap-6">
      <div class="flex items-center gap-6">
        <a href="https://github.com/jamirou" target="_blank" rel="noopener noreferrer" class="text-zinc-400 hover:text-zinc-900 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
        </a>
        <a href="https://linkedin.com/in/jamiro-manriquez-832aaa204" target="_blank" rel="noopener noreferrer" class="text-zinc-400 hover:text-zinc-900 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect width="4" height="12" x="2" y="9"/><circle cx="4" cy="4" r="2"/></svg>
        </a>
        <a href="https://www.instagram.com/yamir.r.r/" target="_blank" rel="noopener noreferrer" class="text-zinc-400 hover:text-zinc-900 transition-colors">
             <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="20" x="2" y="2" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" x2="17.51" y1="6.5" y2="6.5"/></svg>
        </a>
        <a href="mailto:devjamiro@gmail.com" class="text-zinc-400 hover:text-zinc-900 transition-colors">
             <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
        </a>
      </div>
      <p>&copy; {new Date().getFullYear()} Jamiro Manríquez. Todos los derechos reservados.</p>
    </footer>

    <button 
        id="scroll-to-top" 
        aria-label="Volver arriba"
        class="fixed bottom-8 right-8 z-50 p-3 bg-zinc-900 text-white rounded-full shadow-[4px_4px_0px_0px_rgba(24,24,27,1)] border-2 border-white translate-y-20 opacity-0 transition-all duration-300 hover:-translate-y-1 hover:shadow-[6px_6px_0px_0px_rgba(24,24,27,1)] flex items-center justify-center cursor-pointer"
    >
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="m18 15-6-6-6 6"/>
        </svg>
    </button>

    <script>
      // Simple Intersection Observer for Scroll Animations
      const observerOptions = {
        root: null,
        rootMargin: '0px',
        threshold: 0.1
      };

      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('active');
            observer.unobserve(entry.target); // Trigger once
          }
        });
      }, observerOptions);

      // Select all elements with class 'reveal'
      document.querySelectorAll('.reveal').forEach((el) => {
        observer.observe(el);
      });

      // Scroll to Top Logic
      const scrollBtn = document.getElementById('scroll-to-top');
      
      if (scrollBtn) {
        window.addEventListener('scroll', () => {
            if (window.scrollY > 500) {
                scrollBtn.classList.remove('translate-y-20', 'opacity-0');
            } else {
                scrollBtn.classList.add('translate-y-20', 'opacity-0');
            }
        });

        scrollBtn.addEventListener('click', () => {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });
      }
    </script>
  </body>
</html>
